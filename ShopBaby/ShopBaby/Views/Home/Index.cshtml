@model IEnumerable<ShopBaby.Data.Model.Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 
<!--banner-->
<div class="banner">
    <div class="container">
        <div class="banner-text">
            <div class="col-sm-5 banner-left wow fadeInLeft animated" data-wow-delay=".5s">
                <h2>On Entire Fashion range</h2>
                <h3>Coming Soon </h3>
                <h4>Our New Designs</h4>
                <div class="count main-row">
                    <ul id="example">
                        <li><span class="hours">00</span><p class="hours_text">Hours</p></li>
                        <li><span class="minutes">00</span><p class="minutes_text">Minutes</p></li>
                        <li><span class="seconds">00</span><p class="seconds_text">Seconds</p></li>
                    </ul>
                    <div class="clearfix"> </div>
                    <script type="text/javascript" src="~/client/js/jquery.countdown.min.js"></script>
                    <script type="text/javascript">
                            $('#example').countdown({
                                date: '12/24/2020 15:59:59',
                                offset: -8,
                                day: 'Day',
                                days: 'Days'
                            }, function () {
                                alert('Done!');
                            });
                    </script>
                </div>

            </div>
            <div class="col-sm-7 banner-right wow fadeInRight animated" data-wow-delay=".5s">
                <section class="slider grid">
                    <div class="flexslider">
                        <ul class="slides">
                            <li>
                                <h4>-30%</h4>
                                <img src="~/client/images/b1.png" alt="">
                            </li>
                            <li>
                                <h4>-25%</h4>
                                <img src="~/client/images/b2.png" alt="">
                            </li>
                            <li>
                                <h4>-32%</h4>
                                <img src="~/client/images/b3.png" alt="">
                            </li>
                        </ul>
                    </div>
                </section>
                <!--FlexSlider-->
                <script defer src="~/client/js/jquery.flexslider.js"></script>
                <script type="text/javascript">
                        $(window).load(function () {
                            $('.flexslider').flexslider({
                                animation: "pagination",
                                start: function (slider) {
                                    $('body').removeClass('loading');
                                }
                            });
                        });
                </script>
                <!--End-slider-script-->
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>
<!--//banner-->
<!--new-->
<div class="new">
    <div class="container">
        <div class="title-info wow fadeInUp animated" data-wow-delay=".5s">
            <h3 class="title">New <span>Arrivals</span></h3>
        </div>
        <div class="new-info">
            @foreach (var item in Model)
            {
                @if (item.HomeFlag == true)
                {
                    <div class="col-md-3 new-grid simpleCart_shelfItem wow flipInY animated" data-wow-delay=".5s">
                        <div class="new-top">
                            <a asp-controller="Product" asp-route-id="@item.ID" asp-action="Detail"><img src="../../@item.Image" class="img-responsive" alt="" /></a>
                            <div class="new-text">
                                <ul>
                                    <li><a class="item_add" href=""> Add to cart</a></li>
                                    <li><a asp-controller="Product" asp-route-id="@item.ID" asp-action="Detail">Quick View </a></li>
                                    <li><a asp-action="Index" asp-route-id ="@item.CategoryID" asp-controller="Product">Show Details </a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="new-bottom">
                            <h5><a class="name" asp-controller="Product" asp-route-id="@item.ID" asp-action="Detail">@item.Name</a></h5>
                            <div class="rating">
                                <span class="on">☆</span>
                                <span class="on">☆</span>
                                <span class="on">☆</span>
                                <span class="on">☆</span>
                                <span>☆</span>
                            </div>
                            @if (item.PromotionPrice != null)
                            {
                                <div class="ofr">
                                    <p class="pric1"><del>@item.Price.ToString("#,##0")</del></p>
                                    <p><span class="item_price">@Html.DisplayFor(modelItem => item.PromotionPrice)</span></p>
                                </div>
                            }
                            else
                            {
                                <div class="ofr">
                                    <p><span class="item_price">@item.Price.ToString("#,##0")</span></p>
                                </div>
                            }
                        </div>
                    </div>
                }
            }

            <div class="clearfix"> </div>
        </div>
    </div>
</div>
<!--//new-->
