@model ShopBaby.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--breadcrumbs-->
<div class="breadcrumbs">
    <div class="container">
        <ol class="breadcrumb breadcrumb1 animated wow slideInLeft" data-wow-delay=".5s">
            <li><a asp-action="Index" asp-controller="Home"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>Home</a></li>
            <li class="active">Register</li>
        </ol>
    </div>
</div>
<!--//breadcrumbs-->
<!--login-->
<div class="login-page">
    <div class="title-info wow fadeInUp animated" data-wow-delay=".5s">
        <h3 class="title">Register<span> Form</span></h3>
        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit curabitur </p>
    </div>
    <div class="widget-shadow">
        <div class="login-top wow fadeInUp animated" data-wow-delay=".7s">
            <h4>Already have an Account ?<a asp-action="Login" asp-area="" asp-controller="Account">  Sign In »</a> </h4>
        </div>
        <div class="login-body">
            <form class="wow fadeInUp animated" method="post" asp-action="Register" asp-area="" asp-controller="Account" data-wow-delay=".7s">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="text" asp-for="FullName" placeholder="Họ Tên...">
                <span asp-validation-for="FullName" class="text-danger"></span>
                <input type="text" asp-for="Email" placeholder="Email(User Name) ...">
                <span asp-validation-for="Email" class="text-danger"></span>
                <input type="password" name="password" class="lock" asp-for="Password" placeholder="Password ...">
                <span asp-validation-for="Password" class="text-danger"></span>
                <input type="password" asp-for="ConfirmPassword" placeholder="Confirm Password">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                <input type="submit" name="Register" value="Register">
            </form>
        </div>
    </div>
</div>
<!--//login-->
