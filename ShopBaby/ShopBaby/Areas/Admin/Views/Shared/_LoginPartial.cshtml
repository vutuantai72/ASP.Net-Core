@using Microsoft.AspNetCore.Identity
@using ShopBaby.Data.Model

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Admin" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <a asp-area="Admin" asp-controller="Base" asp-action="Index">Hello @UserManager.GetUserName(User)!</a>

        <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>

    </form>
}

