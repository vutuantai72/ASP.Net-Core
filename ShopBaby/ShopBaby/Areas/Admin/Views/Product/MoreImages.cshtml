@model ShopBaby.Data.Model.FileImage
@{
    ViewData["Title"] = "MoreImages";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Create</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-controller="Base" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item"><a asp-controller="ProductCategory" asp-action="Index">Categories</a></li>
                        <li class="breadcrumb-item active">Update</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- right column -->
                <div class="col-md-8">
                    <!-- general form elements disabled -->
                    <div class="card card-warning">
                        <div class="card-header">
                            <h3 class="card-title">Add MoreImages</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <form role="form" asp-controller="Product" asp-action="MoreImages" method="post" enctype="multipart/form-data">
                                <!-- text input -->
                                <div class="form-group">
                                    <label asp-for="Images">Hình ảnh</label>
                                    <input asp-for="Images" type="file" class="form-control" name="singleFile">
                                    <span asp-validation-for="Images"></span>
                                </div>

                                <div class="container">
                                    <div class="row">
                                        @foreach (var item in @ViewBag.images)
                                        {
                                            <div class="col-sm-4">
                                                <img src="@item.Images" width="100" height="100" />
                                                <a asp-controller="Product" asp-action="DeleteImages" name="fileImage" asp-route-id="@item.ImageID" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></a>
                                            </div>
                                        }
                                    </div>

                                </div>


                                <div class="form-group">
                                    <button type="submit" class="btn btn-success pull-right">Lưu</button>
                                    <a class="btn btn-default pull-right" asp-controller="Product" asp-action="Index">Huỷ</a>
                                </div>
                            </form>

                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!--/.col (right) -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>



