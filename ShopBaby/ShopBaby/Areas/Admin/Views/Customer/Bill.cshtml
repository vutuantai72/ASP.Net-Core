@model IEnumerable<ShopBaby.Data.Model.OrderDetail>
@{
    ViewData["Title"] = "Bill";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                @*<div class="col-sm-6">
                        <h1>Categories</h1>
                    </div>*@
                <div class="col-sm-12">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-controller="Base" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active">Customer</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <!-- /.card-header -->
                    <div class="card-body">

                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Product.Name)</th>
                                    <th>@Html.DisplayNameFor(model => model.Quantity)</th>
                                    <th>@Html.DisplayNameFor(model => model.Product.Image)</th>
                                    <th>@Html.DisplayNameFor(model => model.Price)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Product.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                                    <td><img src="@Html.DisplayFor(modelItem => item.Product.Image)" width="60px" /></td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Price)
                                    </td>


                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>

